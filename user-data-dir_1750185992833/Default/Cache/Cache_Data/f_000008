	<script src="https://cloudappspre.telmex.com:443/AdminEvolucion/resources/js/jquery.js"></script>
		<script src="https://cloudappspre.telmex.com:443/AdminEvolucion/resources/js/jquery-ui.js"></script>
	
		<script>
		
			$(document).ready(function(){
				
				
				var idPlataforma=$("#idPlataforma").val();
				$("#divUsuariosGerente").hide();
				$("#divCheckSubordinado").hide();
				
				if(idPlataforma==1){
				
					$("#divCheckSubordinado").show();
				
				}else{
					$("#divCheckSubordinado").hide();
					$("#divUsuariosGerente").hide();
				}
				
							
				if('false'=='true'){
 					 $("#selPlataformas").val("-1");
 					 
					$("#divPerfiles").hide();
					
				}
							
				
						$("#selPlataformas").change(function() {
						
			  					  var plataforma = $(this).val();
			  					  
			  					  $('#selectPerfil').empty();
			    				  $("#selectPerfil").append('<option value="-1">-- SELECCIONA UN PERFIL--</option>');
			
			    				  
			    				  if(plataforma==1){
										$("#divCheckSubordinado").show();
										$("#subordinado").prop("checked",false);
										
									}else{
										$("#divCheckSubordinado").hide();
										$("#divUsuariosGerente").hide();
									}
			    					
			    				  
								if (plataforma != "-1") {
									var ajax_data = {
										"plataforma" : plataforma
								};

								$.ajax({

									type : "POST",
									url : "searchPlataforma",
									cache : false,
									data : ajax_data,
									dataType : 'json',
									success : function(data) {

										if (data != null) {

									
											$("#divPerfiles").show();
											
											var selectoption="";
												
													$.each(data, function(i,item) {
    												$("#selectPerfil").append('<option value="' + item.idPerfil + '">' + item.nombre + '</option>');

    													
													});

												}

											},

											error : function(e) {
												setUpdateMessage(alertDiv, -1);
											}

										});
									}

								});
								
								
				//VISIBILIDAD DEL PASSWORD
								
				$("#eye-open-icon").click(function(){
					
					var pass = document.getElementById("inputPasswd");
					
					if(pass.type == 'password'){
						$(this).removeClass("glyphicon-eye-open").addClass("glyphicon-eye-close").attr('title', 'Ocultar password');
						pass.type = 'text';
					} else{
						$(this).removeClass("glyphicon-eye-close").addClass("glyphicon-eye-open").attr('title', 'Mostrar password');;
						pass.type = 'password';
					}
					
				});
				
					
				$("#check-subordinado").click(function() {
						if($("#subordinado").is(":checked")){
							$("#divUsuariosGerente").show();
						}else{
						$("#divUsuariosGerente").hide();
						
						}
						
								});

							});
		</script>
				<!--Script que se ejecuta cada 5 minutos para mantener viva la sesion  -->    
	
	<script>
	setInterval(function() {
		var MyElement = document
				.getElementById('MyIMG');
		
		MyElement.src = 'indicatorc.gif rand = '
				+ Math.random();
	}, 300000); 
	
	</script>   
